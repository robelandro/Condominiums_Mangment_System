<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="login.LoginController">
   <children>
      <Label layoutX="305.0" layoutY="9.0" prefHeight="27.0" prefWidth="66.0" text="Login" textFill="#040075">
         <font>
            <Font name="System Bold Italic" size="18.0" />
         </font>
      </Label>
      <Label layoutX="152.0" layoutY="139.0" prefHeight="25.0" prefWidth="100.0" text="UserName" />
      <Label layoutX="152.0" layoutY="180.0" prefHeight="25.0" prefWidth="100.0" text="Password" />
      <PasswordField fx:id="password" layoutX="264.0" layoutY="180.0" prefHeight="25.0" prefWidth="200.0" promptText="password" />
      <TextField fx:id="userName" layoutX="264.0" layoutY="139.0" onAction="#loginPressed" prefHeight="25.0" prefWidth="200.0" promptText="username" />
      <Label layoutX="54.0" layoutY="36.0" prefHeight="17.0" prefWidth="85.0" text="DB" />
      <Label layoutX="183.0" layoutY="95.0" text="Option" />
      <Label fx:id="errorPrint" layoutX="152.0" layoutY="237.0" prefWidth="120.0" textFill="#c30e0e" />
      <Button fx:id="login" layoutX="299.0" layoutY="233.0" mnemonicParsing="false" onAction="#loginPressed" prefHeight="25.0" prefWidth="130.0" text="Log In" />
      <Button fx:id="forgetPassword" layoutX="300.0" layoutY="301.0" mnemonicParsing="false" onAction="#forgetPressed" prefHeight="25.0" prefWidth="130.0" text="Forget Password?" />
      <ImageView fitHeight="50.0" fitWidth="66.0" layoutX="305.0" layoutY="36.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="/login/login.png" />
         </image>
      </ImageView>
      <ComboBox fx:id="option" layoutX="263.0" layoutY="91.0" prefWidth="150.0" promptText="Admin/Staff" />
   </children>
</AnchorPane>
